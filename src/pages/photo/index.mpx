            const { success, data, msg } = await fetch.get('/get/uptoken')
            if (success) {
                this.loading = false
                const { upToken } = data
                this.upToken = upToken
            } else {
                msg && wx.showToast({ title: msg, icon: 'none', duration: 2000 })
            }
        }
    },
